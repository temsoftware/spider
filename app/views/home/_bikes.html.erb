<% for item in @bikes %>
  <div id="moto_listado" class="veiculo_listado">
      <span id="moto_foto">
          <img src="uploads/pictures/<%= item.id%>/picture_<%= item.picture[0].id%>_thumbnail.jpg" class="veiculo_foto"/>
      </span>
      <span id="moto_descricao" class="carro_descricao">
         <label><%= item.car.brand.name%> <%= item.car.name%> <%= item.year.description%>-<%= item.model.description%></label><br>
         <label class="carro_preco">R$ <%= item.amount%></label>
         <label class="veiculo_saiba_mais">Saiba Mais</label>
      </span>
  </div>
<% end %>

